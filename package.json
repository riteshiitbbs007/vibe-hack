{
  "name": "figma-component-demo",
  "version": "1.0.0",
  "description": "Demo: Figma to React Component with Visual Testing",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:visual": "playwright test",
    "test:visual:ui": "playwright test --ui",
    "test:figma": "playwright test --config=playwright-figma.config.ts",
    "test:figma:update": "playwright test --config=playwright-figma.config.ts --update-snapshots",
    "test:figma:ui": "playwright test --config=playwright-figma.config.ts --ui",
    "test:badge": "playwright test badge-success",
    "test:badge:figma": "playwright test badge-success-figma-comparison",
    "test:badge:update": "playwright test badge-success --update-snapshots",
    "test:all": "npm run test:visual && npm run test:figma",
    "test:install": "playwright install",
    "slds:lint": "npx @salesforce-ux/slds-linter lint",
    "slds:lint:fix": "npx @salesforce-ux/slds-linter lint --fix",
    "slds:report": "npx @salesforce-ux/slds-linter report -o slds-reports",
    "slds:emit": "npx @salesforce-ux/slds-linter emit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@salesforce-ux/slds-linter": "^0.5.0",
    "@types/node": "^24.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.0",
    "vite": "^4.5.0"
  }
}
